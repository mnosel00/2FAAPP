{
  "env": {
    "browser": true,
    "node": true,
    "es2022": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser", // <-- ZMIANA: Użycie parsera dla TypeScript
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": "./tsconfig.json" // <-- WAŻNE: Wskazuje na plik konfiguracyjny TS
  },
  "plugins": [
    "@typescript-eslint" // <-- Dodanie wtyczki TS
  ],
  "extends": [
    // 1. Podstawowe, zalecane reguły
    "eslint:recommended",

    // 2. Reguły dla TypeScript
    "plugin:@typescript-eslint/recommended", // <-- DODANE: Reguły TS

    // 3. Wtyczka Angular/ESLint (wymaga instalacji pakietów @angular-eslint/...)
    // "plugin:@angular-eslint/recommended", // <-- OPCJONALNIE/WŁASNA KONFIGURACJA Z PROJEKTU

    // 4. Integracja z Prettier (musi być na końcu!)
    "plugin:prettier/recommended",
    "prettier"
  ],
  "rules": {
    // Przykłady reguł TS
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "off",

    "no-unused-vars": ["warn", { "args": "none" }],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
